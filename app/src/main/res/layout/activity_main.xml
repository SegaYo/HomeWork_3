<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:background="@drawable/rectangle_profile_background"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="71dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/roboto"
            android:text="Профиль"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/backButton"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/back_button" />

        <View
            android:id="@+id/whiteLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="228dp"
        android:layout_height="81dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bio_rectangle"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Иван"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto"
            android:text="Иванов"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto"
            android:text="Иванович"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Дата рождения:"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/roboto"
            android:text="01.01.2021"
            android:textColor="@color/black"
            android:textSize="10sp" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:text="Город"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="Саратов"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/aboutUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="О себе"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/aboutUserStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="@string/aboutUserStory"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/shleppa"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <android.widget.Button
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/roboto"
        android:text="@string/edit_profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>